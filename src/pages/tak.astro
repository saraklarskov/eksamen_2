---
import Layout from "../layouts/Layout.astro";
---

<Layout>
    <section>
        <h1>Thank you for reaching out!</h1>
        <p>You can expect a reply within the next 5 working days.</p>
            <a href="/"><button>Continue shopping</button></a>
    </section>
</Layout>

<style>
    section{
        display: flex;
        flex-direction: column;
        align-items: center;
        height: 50vh;
    }
    button{
    margin-top: 2rem;
    background: #000;
    color: #fffef9;
    padding: 1em 1.7em;
    border: 0;
    margin-top: 3rem;
    text-transform: uppercase;
    }

    button:hover{
    background: #fffef9;
    color: #000;
    border: 1px solid #000;
    }

    button a{
        color: #fffef9;
        text-decoration: none;
    }

    @media (min-width: 400px){
        button{
            max-width: 200px;
        }

    }

</style>
