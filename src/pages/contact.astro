---
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <h1>CONTACT US</h1>

  <form action="tak">
    <div class="input">
      <input type="text" id="name" name="name" placeholder="Name" />
    </div>
    <div class="input">
      <input type="text" id="email" name="email" placeholder="Email" />
    </div>
    <div class="input">
      <input type="text" id="message" name="message" placeholder="Message" />
    </div>
    <div id="sendknap">
      <input type="submit" value="SEND" />
    </div>
  </form>

  <p>
    You can also reach us via Instagram direct message <a href="https://www.instagram.com/colada_archive?utm_source=ig_web_button_share_sheet&igsh=ZDNlZDc0MzIxNw==">@colada_archive</a> or via
    our email <a href="mailto:coladaarchive@gmail.com">coladaarchive@gmail.com</a>
  </p>
</Layout>

<style>
  h1 {
    margin-left: 27%;
    margin-bottom: 2rem;
  }
  p {
    margin-left: 5%;
    margin-bottom: 7rem;
  }

  a{
    text-decoration: none;
    color: #000;
  }

  a:hover{
    text-decoration: underline;
  }
  a:active{
    text-decoration: underline;
    color: #b2113c;
  }
  input {
    color:  #000;
    border: 1px solid #bfbfbf;
    background: #fffef9;
    padding: 1em 1.7em;
    max-width: 100%;
    width: 80%;
    margin-bottom: 1rem;
    margin-left: 0.5rem;
    margin-right: -0.5rem;
  }
  #sendknap input {
    margin-top: 2em;
    background:  #000;
    color: #fffef9;
    padding: 1em 1.7em;
    width: 93.5%;
  }
  #message {
    height: 70px;
  }
  @media (min-width: 800px) {
    h1 {
      margin-left: 40%;
    }
    p {
      margin-left: 17%;
      margin-top: 2rem;
    }
    form {
      margin-top: 2rem;
      margin-left: 15rem;
    }
    input {
      padding: 1em 1.7em;
      max-width: 100%;
      width: 60%;
      margin-bottom: 1rem;
      margin-left: 0.5rem;
      margin-right: -0.5rem;
    }
    #sendknap input {
      margin-top: 2em;
      padding: 1em 1.7em;
      width: 65.5%;
      transition: background-color 0.3s, color 0.3s;

    }
    #sendknap:hover input {
      background: #fffef9;
      color: #000;
      border: 1px solid #000;
    }
  }
</style>
