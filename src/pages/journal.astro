    }

    .stylepic, .grid_1{
      overflow: hidden;
      width: 100%;
    }

    .stylepic img, .grid_1 img{
      width: 100%;
      height: auto;
      object-fit: cover;
      transition: transform 0.3s ease;
    }

    .stylepic img:hover, .grid_1 img:hover{
      transform: scale(1.05);
