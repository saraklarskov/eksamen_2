<style>
  .journal1,
  .journal2,
  .journal3 {
    margin-bottom: 2rem;
  }
  .journal2 {
    display: grid;
    grid-template-columns: 1fr 1fr;
    column-gap: 20px;
  }

  .journal3 img {
    width: 100%;
    height: auto;
  }
  @media (min-width: 800px) {
    .journal1 {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 1rem;
      position: relative;
      bottom: 0;
      margin-bottom: 10rem;
    }
    .journal2 {
      display: flex;
      justify-content: flex-end;
    }

    .journal3 {
      margin-left: 30%;
    }
    .journal3 img {
      width: 40%;
      height: auto;
      margin-bottom: 2rem;
    }
    .grid_1 img {
      width: 50%;
    }

    .grid_1 {
      align-self: end;
    }
    .text1 {
      align-self: end;
    }

    p {
      margin-bottom: 50px;
    }
  }
</style>
