  .journal2,
  .journal3 {
    margin-bottom: 2rem;
  }
  .journal3 img {
    width: 100%;
    height: auto;
  }
.journal2{
  display: grid;
  grid-template-columns: 1fr 1fr;
  column-gap: 5%;
}

.journal4{
  display: grid;
