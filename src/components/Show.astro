---
const {data} = Astro.props;
console.log(data);
---

<a href={`shows/${data.id}`}>
    <article>
        <div class="shoes">
        <img src={data.image1} alt="Picture of shoe" class="billede">
        <img src={data.image2} alt="Picture of shoe" class="hover-img">

        </div>
        <p class="details">{data.type}</h4>
        <h2 class="marke">{data.brand}</h2>
        <div class="pris_size">
        <p class="details">{data.price}</h4>
        <p class="details">{data.size}</h4>
        </article>
    </a>


    <style>

    .pris_size {
    display: flex;
    justify-content: space-between;
    margin-bottom: 50px;
    }

    .hover-img{
        display: none;
    }
    


@media (min-width:800px){

    .shoes {
    overflow: hidden;
    width: 100%;
    position: relative;
    display: inline-block;
}

.shoes .billede,
.shoes .hover-img {
    width: 100%; /* Tilpas st√∏rrelsen efter behov */
    display: block;
}

.shoes .hover-img {
    position: absolute;
    top: 0;
    left: 0;
    opacity: 0;
    transition: opacity 0.4s ease;
}

.shoes:hover .hover-img {
    opacity: 1;
}

.shoes:hover .billede {
    opacity: 1;
}

}

    </style>

   
        
   
      