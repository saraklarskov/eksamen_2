<style>
  footer {
    margin: 5rem 11px 2rem 11px;
  }

  br {
    display: none;
  }

  .footer_text {
    display: flex;
    flex-direction: column;
  }

  .container {
    display: flex;
    justify-content: flex-end;
  }

  .right-img {
    display: block;
    max-width: 100%;
    width: 50%;
    margin-top: 30px;
  }
  .links_footer {
    font-size: 0.8rem;
    text-transform: uppercase;
    color: black;
    font-family: "Poppins", sans-serif;
    text-decoration: none;
  }
  li {
    list-style: none;
  }
  h2 {
    font-size: 1rem;
  }

  .left_column,
  .middle_column,
  .right_column {
    margin-top: 40px;
  }

  .logo_desk {
    display: none;
  }

  @media (min-width: 800px) {
    footer {
      margin: 8rem 30px 2rem;
    }
    h2 {
      font-size: 1.2rem;
    }

    hr {
      border: none;
      height: 1px;
      background-color: #333;
      margin: 5px 0;
    }
    a {
      font-size: 1.1rem;
      line-height: 2rem;
    }

    a:hover {
      text-decoration: underline;
    }

    a:active {
      color: #b2113c;
    }

    .footer_text {
      display: flex;
      flex-direction: row;
      justify-content: space-between;
    }

    .logo_desk {
      display: block;
      width: 48%;
      margin-top: 60px;
    }

    .right-img {
      display: none;
    }

    .container {
      display: flex;
      justify-content: space-between;
    }
  }
