<style>

header {
    position: fixed;
    top: 0;
    background-color: #fffef9;
    z-index: 1000;
    padding: 10px 10px;
    margin: 0; /* Tilføj dette for at sikre ingen margin */
}
.logo {
  width: 25%;
}

.burger-menu{
  margin-right: -4px;
}

  .add {
    display: none;
  }
    hr {
    border: none; /* Fjern standard kant */
    height: 1px; /* Angiv højden på linjen */
    background-color: #333; /* Angiv farven på linjen */
    margin: 7px 0; Tilføj noget margin over og under linjen
}
    .navi {
        display: flex;
        justify-content: space-between;    
    }
.burger-menu {
    display: flex;
    flex-direction: column;
    cursor: pointer;
  }

  .bar {
    width: 30px;
    height: 2px;
    background-color: black;
    margin: 4px;
    transition: transform 0.3s ease; /* Transition for smooth rotation */
    z-index: 100;
  }

  .cross .bar:nth-child(1) {
    transform: rotate(50deg) translate(4px, 3px);
  }

  .cross .bar:nth-child(2) {
    display: none; /* Behold midterlinjen synlig */
  }

  .cross .bar:nth-child(3) {
    transform: rotate(-50deg) translate(5px, -5px);
  }

  .menu-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: none; /* Hide menu list by default */
  }

  .menu-list.active {
    height: 100vh;
    display: flex;
    flex-direction: column;
    cursor: pointer;
    background-color: #fffef9;
    z-index: 50;
    margin-top: 10px;
  }

  .menu-list li {
    margin: 10px 0;
  }

  .menu-list li a {
    text-decoration: none;
    color: black;
  }

  a{
  font-family: "Poppins", sans-serif;
  font-weight: 400;
  font-style: normal;
  text-transform: uppercase;
  font-size: 25px;
  }

  @media (min-width: 800px){

header {
  margin: 30px;
}

    .logo {
      display: none;
    }

    .add {
      display: block;
      width: 120px;
      display: flex;
    }


.burger-menu{
  display: none;
}

.desk-menu{
  display: flex;
    justify-content: space-between;
}

.menu-list {
  display: flex;
  justify-content: end;
gap: 40px;
}

.menu-list a {
  font-size: 20px;
}

.remove {
  display: none;
}

.menu-list li:hover {
    text-decoration: underline;
}

.menu-list li a:active, li:active {
    color: #b2113c; 
}

header {
    position: fixed;
    top: 0;
    background-color: #fffef9;
    width: 97%;
    z-index: 1000;
    padding: 10px 20px;
    margin: 0; /* Tilføj dette for at sikre ingen margin */
}
}

</style>

<script>
    document.addEventListener("DOMContentLoaded", function () {
      const burgerMenu = document.querySelector(".burger-menu");
      const menuList = document.querySelector(".menu-list");
  
      burgerMenu.addEventListener("click", function () {
        burgerMenu.classList.toggle("cross");
        if (burgerMenu.classList.contains("cross")) {
          // Burgermenuen er aktiv, tilføj "cross" klassen til alle ".bar" elementer
          menuList.classList.add("active");
        } else {
          // Burgermenuen er ikke aktiv, fjern "cross" klassen fra alle ".bar" elementer
          menuList.classList.remove("active");
        }
      });
    });
  </script>
  