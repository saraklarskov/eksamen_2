<nav class="navbar">
  <div class="burger-menu">
    <div class="bar"></div>
    <div class="bar"></div>
    <div class="bar"></div>
  </div>
</div>
</nav>

<div class="desk-menu">
  <img src="pics/logofinal.png" alt="" class="add">
    <ul class="menu-list">
        <li class="remove"><a href="/">Frontpage</a></li>
        <li><a href="shoes">Shoes</a></li>
        <li><a href="journal">Journal</a></li>
        <li><a href="about">About</a></li>
        <li><a href="cart">Cart</a></li>
