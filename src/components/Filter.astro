        </div>
    </div>
</div>

<style>
    h2 {
        margin-top: 40px;
    }

    .toggle-content {
        display: none; /* Skjuler indholdet som standard */
        transition: max-height 0.3s ease-out;
        max-height: 0;
    }

    .toggle-content.show {
        display: block; /* Vis indholdet når det er aktivt */
        max-height: 500px; /* Tilpas denne værdi efter behov */
        display: grid;
        grid-template-columns: 1fr 1fr 1fr;
    }

    .toggle-header.clicked {
        color: #B2113C; /* Skift farven til rød når klassen 'clicked' er tilføjet */
    }
</style>

<script>
document.addEventListener("DOMContentLoaded", function() {
    const headers = document.querySelectorAll(".toggle-header");

    headers.forEach(header => {
        header.addEventListener("click", function() {
            const content = this.nextElementSibling;
            const isVisible = content.classList.toggle("show");
            this.classList.toggle("clicked");

            // Skift teksten fra "+" til "-" og omvendt
            this.textContent = isVisible ? 'Filter -' : 'Filter +';
        });
    });
});



</script>